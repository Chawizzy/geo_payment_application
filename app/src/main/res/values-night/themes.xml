<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark_background_color</item>
        <item name="colorPrimary">@color/dark_background_color</item>
        <item name="colorPrimaryDark">@color/dark_background_color</item>
        <item name="colorAccent">@color/dark_background_color</item>
        <item name="navigation_background_color">@color/dark_background_color</item>

        <item name="button_background_color">@color/dark_button_background_color</item>
        <item name="button_background_color_hover">@color/dark_button_background_color_hover</item>

        <item name="card_background_color">@color/dark_card_background_color</item>

        <!--I used this to remove the snack-bar margin-->
        <item name="snackbarStyle">@style/SnackBarStyle</item>
    </style>

    <style name="SnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">0dp</item>
    </style>
</resources>